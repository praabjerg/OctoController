# ISSILed
Name = ISSILedSPICapabilities;
Version = 0.1;
Author = "HaaTa (Jacob Alexander) 2019";

# Modified Date
Date = 2019-04-19;

# Basic ISSI Capabilities
# Modes
#  0: Decrease brightness of all leds
#  1: Increase brightness of all leds
#  2: Set brightness of all leds
#  3: Turn off all leds
#  4: Turn on all leds
#  5: Toggle all leds
#  6: Set framerate (1000 / value = fps) i.e. ms per frame
#  7: Increase fps (1000 / value = fps)
#  8: Decrease fps (1000 / value = fps)
#  9: Set default fps (amount ignored)
# 10: Set default brightness (amount ignored)
# Amount -> 0 -> 255
ledControl => LED_control_capability( mode : 1, amount : 1 );


# Defines available to the ISSILed sub-module

# Driver Chip
# Selects which driver chip being used
# Set to 1 to enable
# Valid Chips
#  31FL3743B - http://www.issi.com/WW/pdf/31FL3743B.pdf
ISSI_Chip_31FL3743B => ISSI_Chip_31FL3743B_define;
ISSI_Chip_31FL3743B = 0;


# Enable/Disable LEDs
# Set to 1 to enable ISSI chips
# Set to 0 to enable low power (hardware shutdown)
ISSI_Enable => ISSI_Enable_define;
ISSI_Enable = 1;

# CS Pin Assignment
ISSI_SPI_CS0 => ISSI_SPI_CS0_define;
ISSI_SPI_CS0 = "periph_io(A, 11, A)";
ISSI_SPI_CS1 => ISSI_SPI_CS1_define;
ISSI_SPI_CS1 = "periph_io(A, 31, A)";
ISSI_SPI_CS2 => ISSI_SPI_CS2_define;
ISSI_SPI_CS2 = "periph_io(A, 30, B)";
ISSI_SPI_CS3 => ISSI_SPI_CS3_define;
ISSI_SPI_CS3 = "periph_io(A, 3, B)";

# GPIO Pin Assignment
# Hardware Shutdown Pin (SDB)
ISSI_HardwareShutdownPin => ISSI_HardwareShutdownPin_define;
ISSI_HardwareShutdownPin = "gpio(A,23)";

# Global Brightness
# 31FL3743B
#  0 to 0xFF (255)
#  See datasheet for current calculation, depends on Rext
ISSI_Global_Brightness => ISSI_Global_Brightness_define;
ISSI_Global_Brightness = 255;

# Available ISSI Chips
ISSI_Chips => ISSI_Chips_define;
ISSI_Chips = 1; # 1 by default

# LED Struct Definition
LED_BufferStruct = "
typedef struct LED_Buffer {
	uint8_t buffer[198];
} LED_Buffer;
volatile LED_Buffer LED_pageBuffer[ ISSI_Chips_define ];

typedef struct KLL_Buffer {
	uint8_t buffer[198];
} KLL_Buffer;
volatile KLL_Buffer KLL_pageBuffer[ ISSI_Chips_define ];
";

# FPS Target
# Each ISSI chip setup has a different optimal framerate.
# This setting specifies a target frame rate. This is sort've like "V-Sync" on monitors.
# So the framerate will not go above this amount.
# If the framerate goes below, ledFPS cli will issue warnings when enabled.
ISSI_FrameRate_ms => ISSI_FrameRate_ms_define;
ISSI_FrameRate_ms = 10; # 1000 / <ISSI_FrameRate_ms> = 100 fps


